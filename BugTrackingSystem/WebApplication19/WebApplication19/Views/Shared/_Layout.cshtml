<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication19</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication19.styles.css" asp-append-version="true" />
    <style>
        :root {
            --primary-color: #6c5ce7;
            --secondary-color: #a29bfe;
            --accent-color: #fd79a8;
            --success-color: #00b894;
            --warning-color: #fdcb6e;
            --danger-color: #e17055;
        }

        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            box-shadow: 0 4px 12px rgba(108, 92, 231, 0.2);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: white !important;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.85) !important;
            font-weight: 500;
            margin: 0 8px;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: white !important;
                transform: translateY(-2px);
            }

        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1551033406-611cf9a28f67?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 80px 0;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            margin-bottom: 25px;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 25px rgba(0, 0, 0, 0.12);
            }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            font-weight: 600;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: #5a4bc9;
                border-color: #5a4bc9;
            }

        .badge {
            font-size: 0.85rem;
            font-weight: 600;
            padding: 6px 10px;
            border-radius: 50px;
        }

        .bug-card {
            position: relative;
            overflow: hidden;
        }

            .bug-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 5px;
                height: 100%;
                background-color: var(--primary-color);
            }

        .bug-high {
            border-left: 5px solid var(--danger-color);
        }

        .bug-medium {
            border-left: 5px solid var(--warning-color);
        }

        .bug-low {
            border-left: 5px solid var(--success-color);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 10px;
        }
        /* Status badges */
        .status-badge {
            font-weight: 500;
            padding: 3px 8px;
            border-radius: 12px;
            display: inline-block;
        }

        .status-open {
            background-color: #e6f7e6;
            color: #2e7d32;
        }

        .status-inprogress {
            background-color: #fff8e6;
            color: #ff8f00;
        }


        .status-closed {
            background-color: #ffebee;
            color: #c62828;
        }

        /* Severity indicators */
       

        .severity-high {
            font-weight: 500;
            color: #f57c00;
        }


        .watermark-fallback {
            position: fixed;
            top: 0;
            left: 0;
            width: 300%;
            height: 300%;
            background-image: repeating-linear-gradient( -30deg, transparent, transparent 200px, rgba(0, 79, 159, 0.03) 200px, rgba(0, 79, 159, 0.03) 400px );
            z-index: -2147483647;
            pointer-events: none;
        }



    </style>

</head>
<body>
   
       
   
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bug Tracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bugs" asp-action="Index">Bug List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bugs" asp-action="Create">Report Bug</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <svg style="position:fixed; top:0; left:0; width:0; height:0;">
                <pattern id="watermark-pattern" patternUnits="userSpaceOnUse" width="600" height="300">
                    <text x="300" y="150"
                          font-family="Arial"
                          font-size="80"
                          fill="#004F9F"
                          fill-opacity="0.03"
                          text-anchor="middle"
                          transform="rotate(-30 300 150)">RPS WIPRO</text>
                </pattern>
            </svg>

            <script>
                    // Feature detection fallback
                    if (!CSS.supports('background-image', 'url("data:image/svg+xml")')) {
                        const fallback = document.createElement('div');
                        fallback.className = 'watermark-fallback';
                        fallback.style.backgroundImage = 'url(#watermark-pattern)';
                        document.body.appendChild(fallback);
                    }
                    </script>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Bug Tracking System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
