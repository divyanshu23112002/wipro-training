@{
    ViewData["Title"] = "About Us";
}

<div class="container">
    <!-- Hero Section -->
    <div class="hero-section text-center py-5 bg-light mb-5">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead">Empowering businesses with innovative HR solutions since 2010.</p>
    </div>

    <!-- Our Story -->
    <div class="row mb-5">
        <div class="col-lg-6">
            <h2>Our Story</h2>
            <p>Founded in 2010, we started as a small team of HR professionals and developers who saw a need for better employee management tools. Today, we serve thousands of businesses worldwide.</p>
            <p>Our mission is to simplify workforce management so companies can focus on growth.</p>
        </div>
        <div class="col-lg-6">
            <img src="https://via.placeholder.com/600x400" alt="Our Office" class="img-fluid rounded shadow">
        </div>
    </div>

    <!-- Core Values -->
    <div class="bg-light p-5 mb-5 rounded">
        <h2 class="text-center mb-4">Our Core Values</h2>
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <i class="fas fa-lightbulb fa-3x mb-3 text-primary"></i>
                <h4>Innovation</h4>
                <p>We constantly improve our solutions.</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <i class="fas fa-handshake fa-3x mb-3 text-success"></i>
                <h4>Integrity</h4>
                <p>Honesty and transparency guide us.</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <i class="fas fa-users fa-3x mb-3 text-info"></i>
                <h4>Customer Focus</h4>
                <p>Your success is our priority.</p>
            </div>
        </div>
    </div>

    <!-- Team Members -->
    <h2 class="text-center mb-4">Meet Our Team</h2>
    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100 shadow-sm">
                <img src="https://via.placeholder.com/300x300" class="card-img-top" alt="Team Member">
                <div class="card-body">
                    <h5 class="card-title">John Doe</h5>
                    <p class="card-text text-muted">CEO & Founder</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100 shadow-sm">
                <img src="https://via.placeholder.com/300x300" class="card-img-top" alt="Team Member">
                <div class="card-body">
                    <h5 class="card-title">Jane Smith</h5>
                    <p class="card-text text-muted">HR Director</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100 shadow-sm">
                <img src="https://via.placeholder.com/300x300" class="card-img-top" alt="Team Member">
                <div class="card-body">
                    <h5 class="card-title">Mike Johnson</h5>
                    <p class="card-text text-muted">Lead Developer</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Achievements -->
    <div class="bg-dark text-white p-5 rounded">
        <h2 class="text-center mb-4">Our Achievements</h2>
        <div class="row text-center">
            <div class="col-md-3 mb-3">
                <h3>10+</h3>
                <p>Industry Awards</p>
            </div>
            <div class="col-md-3 mb-3">
                <h3>50+</h3>
                <p>Countries Served</p>
            </div>
            <div class="col-md-3 mb-3">
                <h3>100%</h3>
                <p>Client Satisfaction</p>
            </div>
            <div class="col-md-3 mb-3">
                <h3>24/7</h3>
                <p>Support Team</p>
            </div>
        </div>
    </div>
</div>