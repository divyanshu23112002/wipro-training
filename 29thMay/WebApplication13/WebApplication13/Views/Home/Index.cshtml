@{
    ViewData["Title"] = "Employee Management System";
}

<!-- Hero Section -->
<div class="hero-section text-center py-5 bg-light mb-5">
    <div class="container">
        <h1 class="display-4">Welcome to Our Employee Portal</h1>
        <p class="lead">Efficiently manage your workforce with our powerful tools.</p>
        <a asp-controller="Employees" asp-action="Index" class="btn btn-primary btn-lg mt-3">View Employees</a>
    </div>
</div>

<!-- Key Features -->
<div class="container">
    <h2 class="text-center mb-4">Why Choose Our System?</h2>
    <div class="row">
        <!-- Feature 1 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                    <h4>Employee Directory</h4>
                    <p>Quickly access and manage employee records.</p>
                </div>
            </div>
        </div>
        <!-- Feature 2 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-chart-pie fa-3x mb-3 text-success"></i>
                    <h4>Analytics Dashboard</h4>
                    <p>Track workforce trends with real-time reports.</p>
                </div>
            </div>
        </div>
        <!-- Feature 3 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-lock fa-3x mb-3 text-info"></i>
                    <h4>Secure Data</h4>
                    <p>Enterprise-grade security for sensitive data.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats (if DB connected) -->
<div class="bg-dark text-white py-4 mb-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <h3>50+</h3>
                <p>Companies Trust Us</p>
            </div>
            <div class="col-md-3">
                <h3>10,000+</h3>
                <p>Employees Managed</p>
            </div>
            <div class="col-md-3">
                <h3>24/7</h3>
                <p>Support Available</p>
            </div>
            <div class="col-md-3">
                <h3>99.9%</h3>
                <p>Uptime Guarantee</p>
            </div>
        </div>
    </div>
</div>

<!-- Testimonials -->
<div class="container mb-5">
    <h2 class="text-center mb-4">What Our Clients Say</h2>
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>"This system transformed our HR operations!"</p>
                        <footer class="blockquote-footer">John Doe, <cite>ABC Corp</cite></footer>
                    </blockquote>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>"Easy to use and saved us countless hours."</p>
                        <footer class="blockquote-footer">Jane Smith, <cite>XYZ Inc</cite></footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
</div>